@import 'nib'
@import './common'

#contentContainer
  margin-top 20px
  padding 30px
  border 1px solid #d5d4d4
  background-color #fff
  
#topList
  position relative
  .hottest
    width 180px
    float right
    .title
      margin 0
      height 1.5em
      font-size 1.5em
      line-height 1.5em
      overflow hidden
      color black
    .author
      float right
      font-size 12px
      color #0054a6
    .novelAnchor
      display block
      width 90px
      height 112px
      margin 0 8px 0 0
      padding 1px
      border 1px solid #e0e0e0
      &:hover
        border 1px solid #000
      img
        display block
        width 100%
        height 100%
    .desc
      margin 0
      line-height 20px
      overflow hidden
      height 200px
  .items
    overflow hidden
    width 740px
    margin 0
    padding 0
    .item
      position relative
      width 70px
      height 87px
      border 2px solid #fff
      float left
      overflow hidden
      a.anchor
        position absolute
        left 0
        top 0
      a, img
        display block
        width 100%
        height 100%

#novelDetail
  background-color #f2f2f2
  border 1px solid #333
  width 250px
  padding 10px
  position absolute
  z-index 9
  top 0
  left -100%

  .arrowLeft1, .arrowLeft2
    height 0
    width 0
    border-style solid
    border-width 8px 8px 8px 0
    border-color transparent
    border-right-color #f2f2f2
    position absolute
    top 30px
    left -6px
  .arrowLeft1
    left -8px
    border-right-color #333

  .title
    font-size 18px
    color black
  .desc
    max-height 155px
    overflow hidden
  dt, dd
    margin 0
    display inline-block
  dt
    color #999
    width 40px
  dd
    color #333
    width 85px

#latestItems
  .title
    font-size 20px
    line-height 32px
    text-indent 10px
    margin-bottom 10px
  .category, .author, .time
    width 120px
  .name
    width 150px
  td.category
    color #666
  td.chapter
    a
      color #9e4b76
      &:hover
        color #ba2636